<div class="header">
  <h1><%= link_to "Wikinimous", articles_path, class:"Wiki" %></h1>
  <%= link_to "New Article", new_article_path, class: "new-article" %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 articles">
      <% @articles.each do |article| %>
      <h3><%= link_to article.title, article_path(article) %></h3>
      <p><%= article.content %></p>
      <% end %>
    </div>
  </div>
</div>
